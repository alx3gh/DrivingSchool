@model DrivingSchool.ViewModels.LessonsVM.LessonsViewModel
@Html.AntiForgeryToken()

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Lesson</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: #fff;
            overflow-x: hidden;
        }

        .container {
            max-width: 1000px;
            margin: 50px auto;
            padding: 30px 50px;
            text-align: center;
            border-radius: 25px;
            background: orange;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(3px);
        }

        h1 {
            font-size: 2.4em;
            margin-bottom: 20px;
            color: blue;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            font-size: 1.2em;
            display: block;
            color: blue;
        }

        input, textarea {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

            input::placeholder, textarea::placeholder {
                color: rgba(255, 255, 255, 0.6);
            }

        .btn-submit {
            color: #fff !important;
            border: none;
            width: 30%;
            padding: 10px 20px;
            font-size: 1em;
            cursor: pointer;
            border-radius: 10px;
            margin-top: 20px;
            background-color: #27CCF5 !important;
        }

            .btn-submit:hover {
                color: #fff !important;
                background-color: #27F59F !important;
            }

        footer .container {
            padding: 0px;
        }

        footer {
            position: relative !important;
        }
    </style>
</head>
<body>
    <h1>Create a New Lesson</h1>
    <form asp-action="CreateLesson" method="post">
        <input type="hidden" asp-for="DriversId" />

        <div class="form-group">
            <label asp-for="Name">Lesson Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter the lesson name" autocomplete="off" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" type="number" placeholder="Enter the price" autocomplete="off" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Provide a brief description of the lesson"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-submit">Save Lesson</button>
    </form>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
