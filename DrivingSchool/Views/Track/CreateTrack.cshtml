@model DrivingSchool.ViewModels.TracksVM.CreateTrackViewModel
@Html.AntiForgeryToken()

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: #fff;
            overflow-x: hidden;
        }

        .container {
            max-width: 1000px;
            margin: 50px auto;
            padding: 30px 50px;
            text-align: center;
            border-radius: 25px;
            background: orange;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(3px);
        }

        h1 {
            font-size: 2.4em;
            margin-bottom: 20px;
            text-align: center;
            color: blue;
        }

        label {
            font-size: 1.2em;
            margin: 15px 0 5px 0;
            display: inline-block;
            color: blue;
        }

        textarea {
            resize: none;
            height: 150px;
        }

        .this {
			background-color: #27CCF5 !important;
			color: #fff !important;
            border: none !important;
            width: 30%;
        }

            .this:hover {
                background-color: #27F59F !important;
                color: #fff !important;
            }

        .form-group {
            margin-bottom: 15px;
        }

        footer .container {
            padding: 0px;
        }

        .footer {
            position: relative !important;
        }
    </style>
</head>
<body>
    <h1>Create a New Track</h1>
    <form asp-action="CreateTrack" method="post">
        <div class="form-group">
            <label asp-for="Name">Track Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter the Track name" autocomplete="off" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Location">Location</label>
            <input asp-for="Location" class="form-control" placeholder="Enter the Track Location" autocomplete="off" required />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl">Image URL</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Paste the image URL here (optional)" autocomplete="off" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Provide a brief description" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="this btn btn-primary">Create Track</button>
    </form>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
