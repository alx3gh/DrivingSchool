@model DrivingSchool.ViewModels.TracksVM.CreateTrackViewModel
@Html.AntiForgeryToken()

<!DOCTYPE html>
<html lang="en">
<body>
    <h1>Create a New Track</h1>
    <form asp-action="CreateTrack" method="post">
        <div class="form-group">
            <label asp-for="Name">Track Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter the Track name" autocomplete="off" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Location">Location</label>
            <input asp-for="Location" class="form-control" placeholder="Enter the Track Location" autocomplete="off" required />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl">Image URL</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Paste the image URL here (optional)" autocomplete="off" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Provide a brief description" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="this btn btn-primary">Create Track</button>
    </form>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
