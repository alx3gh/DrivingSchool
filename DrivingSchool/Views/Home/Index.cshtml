@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Driving School</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: #fff;
            overflow-x: hidden;
            position: relative;
        }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 30px 100px;
            text-align: center;
            border-radius: 25px;
            background: orange;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(3px);
        }

        h1 {
            font-size: 2.8em;
            margin-bottom: 40px;
        }

        p {
            font-size: 1.2em;
            line-height: 1.8;
            color: #dcdcdc;
            margin: 25px 0px;
        }

        footer .container {
            padding: 0px;
        }

    </style>
</head>
<body>
    <h1>Welcome to DrivingSchoolWebApp</h1>

    <p>
        Welcome to DrivingSchool !
    </p>
</body>
</html>
