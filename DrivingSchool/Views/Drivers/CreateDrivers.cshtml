@model DrivingSchool.ViewModels.DriversVM.CreateDriversViewModel
@Html.AntiForgeryToken()

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Driver</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: #fff;
            overflow-x: hidden;
        }

        .container {
            max-width: 1000px;
            margin: 50px auto;
            padding: 30px 50px;
            text-align: center;
            border-radius: 25px;
            background: rgba(25, 0, 150, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(3px);
        }

        h1 {
            font-size: 2.4em;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            font-size: 1.2em;
            display: block;
        }

        input, textarea, select {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

            input::placeholder, textarea::placeholder {
                color: rgba(255, 255, 255, 0.6);
            }

        .btn-submit {
            color: #fff !important;
            border: none;
            width: 30%;
            padding: 10px 20px;
            font-size: 1em;
            cursor: pointer;
            border-radius: 10px;
            margin-top: 20px;
        }

            .btn-submit:hover {
                color: #fff !important;
            }

        footer .container {
            padding: 0px;
        }
    </style>
</head>
<body>
    <h1>Create a New Driver</h1>

    <form asp-action="CreateDriver" method="post">
        <input type="hidden" asp-for="TrackId" />

        <div class="form-group">
            <label asp-for="Name">Driver Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter the drivers name" autocomplete="off" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Age">Age</label>
            <input asp-for="Age" class="form-control" type="number" placeholder="Enter the drivers age" autocomplete="off" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl">Image URL</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Paste the image URL here (optional)" autocomplete="off" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Bio">Biography</label>
            <textarea asp-for="Bio" class="form-control" rows="5" placeholder="Provide a brief bio"></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-submit">Create Driver</button>
    </form>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
