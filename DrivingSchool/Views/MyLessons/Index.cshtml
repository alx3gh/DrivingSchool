@model List<DrivingSchool.Models.Lessons>
@Html.AntiForgeryToken()

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Lessons</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: #fff;
            overflow-x: hidden;
            position: relative;
        }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 0 100px;
            text-align: center;
            border-radius: 25px;
            background: rgba(25, 0, 150, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(3px);
        }

        h1 {
            font-size: 2.8em;
            margin-bottom: 40px;
            text-align: center;
            margin-top: 100px;
            color: blue;
        }

        .lessons-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 20px;
            margin: 50px auto;
            max-width: 1200px;
            padding: 0 20px;
        }

        .lessons-item {
            background: rgba(255, 255, 255, 0.1);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
            text-align: center;
            transition: transform 0.3s ease-in-out;
        }

            .lessons-item:hover {
                transform: scale(1.05);
            }

        h2 {
            margin-bottom: 15px;
            color: blue;
        }

        .lessons-info {
            color: #dcdcdc;
            margin-bottom: 20px;
            text-align: left;
        }

        .this-remove {
            background-color: #e53935;
            color: #fff !important;
        }

            .this-remove:hover {
                background-color: #ad0006;
                color: #fff !important;
            }

        .no-lessons {
            text-align: center;
            font-size: 1.5em;
            color: #dcdcdc;
            margin-top: 50px;
        }

        footer .container {
            padding: 0px;
        }
    </style>
</head>
<body>
    <h1>My Lessons</h1>

    @if (Model != null && Model.Any())
    {
        <div class="lessons-grid">
            @foreach (var lessons in Model)
            {
                <div class="lessons-item">
                    <h2>@lessons.Name</h2>
                    <hr />
                    <div class="lessons-info">
                        <p><strong>Track:</strong> @lessons.Drivers.Track.Name</p>
                        <p><strong>Location:</strong> @lessons.Drivers.Track.Location</p>
                        <p><strong>Drivers:</strong> @lessons.Drivers.Name</p>
                        <p><strong>Description:</strong> @lessons.Description</p>
                        <p><strong>Price:</strong> $@lessons.Price</p>
                    </div>

                    <form method="post" asp-controller="Course" asp-action="RemoveFromMyLessons">
                        <input type="hidden" name="lessonsId" value="@lessons.Id" />
                        <button type="submit" class="btn this-remove" onclick="return confirm('Are you sure you want to remove @lessons.Name from your lessonss?')">Remove Course</button>
                    </form>
                </div>
            }
        </div>
    }
    else
    {
        <p class="no-lessons">
            No lessons added yet
        </p>
    }
</body>
</html>
