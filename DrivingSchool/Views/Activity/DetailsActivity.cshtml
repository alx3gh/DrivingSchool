@model DrivingSchool.ViewModels.ActivityVM.DetailsActivityViewModel
@Html.AntiForgeryToken()

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Name - Activity Details</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin-bottom: 150px;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: #fff;
            overflow-x: hidden;
        }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 30px 50px;
            text-align: center;
            border-radius: 25px;
            background: orange;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(3px);
        }

        h1 {
            font-size: 2.8em;
            margin-bottom: 40px;
            color: blue;
        }

        .activity-image img {
            max-width: 70%;
            height: auto;
            border-radius: 15px;
            margin-bottom: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.7);
        }

        .description {
            font-size: 1.2em;
            line-height: 1.8;
            color: #dcdcdc;
            margin: 25px 0px;
        }

        .cars-list {
            margin-top: 30px;
        }

        .cars-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }

        .cars-item {
            text-align: center;
            background: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

            .cars-item img {
                max-width: 100%;
                height: auto;
                border-radius: 10px;
                margin-bottom: 10px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
            }

        .cars-name {
            color:blue;
			font-weight: bold;
            font-size: 1.2em;
            margin: 10px 0;
        }

        .cars-description {
            font-size: 0.9em;
            color: #dcdcdc;
        }

        .this {
            width: 20%;
            margin-top: 25px;
            color: #fff !important;
            border: none !important;
            padding: 10px 20px;
            border-radius: 5px;
            background-color: #27CCF5 !important;
        }

            .this:hover {
                background-color: #27F59F !important;
            }

        .this-delete {
            font-size: 1em !important;
            width: 20%;
            margin-top: 25px;
            background-color: #e53935 !important;
            color: #fff !important;
            border: none !important;
            padding: 10px 20px;
            border-radius: 5px;
        }

            .this-delete:hover {
                background-color: #ad0006 !important;
                color: #fff !important;
            }

        footer .container {
            padding: 0px;
        }

        .underline {
            border-bottom: 3px solid rgba(255, 107, 255, 0.3);
            padding-bottom: 5px;
        }
    </style>
</head>
<body>
    <div class="activity-image">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Name" />
        }
    </div>

    <h1>@Model.Name</h1>
    <div class="description">
        <h3><strong class="underline">Description</strong></h3>
        <p>@Model.Description</p>
    </div>

    <div class="cars-list">
        <h2>Cars</h2>
        <hr />
        @if (Model.CarsAvailable != null && Model.CarsAvailable.Any())
        {
            <div class="cars-grid">
                @foreach (var carsAvailable in Model.CarsAvailable)
                {
                    <div class="cars-item">
                        @if (!string.IsNullOrEmpty(carsAvailable.CarsImageUrl))
                        {
                            <img src="@carsAvailable.CarsImageUrl" alt="@carsAvailable.CarsName" />
                        }

                        <div class="cars-name">@carsAvailable.CarsName</div>
                        <div class="cars-description">@carsAvailable.CarsDescription</div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No cars available for this activity.</p>
        }
    </div>

    <div>
        <a asp-controller="Track" asp-action="TrackDetails" asp-route-id="@Model.Track.Id" class="btn this">Back to Track</a>

        @if (User.IsInRole("Administrator"))
        {
            <a asp-controller="Cars" asp-action="AddCars" asp-route-activityId="@Model.Id" class="btn this">Edit Activity Cars</a>
            <a asp-controller="Activity" asp-action="EditActivity" asp-route-id="@Model.Id" class="btn this">Edit Activity</a>

            <form asp-controller="Activity" asp-action="DeleteActivity" asp-route-id="@Model.Id" method="post" style="display:inline;">
                <button type="submit" class="btn this-delete" onclick="return confirm('Are you sure you want to delete this Activity?')">Delete Activity</button>
            </form>
        }
    </div>
</body>
</html>
