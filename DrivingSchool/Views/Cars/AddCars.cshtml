@model DrivingSchool.ViewModels.CarsVM.CurrentCarsViewModel
@Html.AntiForgeryToken()

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.ActivityName</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: #fff;
            overflow-x: hidden;
            position: relative;
        }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 30px 100px;
            text-align: center;
            border-radius: 25px;
            background: rgba(25, 0, 150, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(3px);
        }

        h1 {
            font-size: 2.8em;
            margin-bottom: 40px;
            color: blue;
        }

        .cars-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .cars-item {
            width: calc(33% - 20px);
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            padding: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
            text-align: center;
            position: relative;
        }

        .cars-image {
            width: 100%;
            height: 200px;
            border-radius: 15px;
            overflow: hidden;
            position: relative;
        }

            .cars-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 15px;
            }

        h4 {
            color: blue;
            font-weight: bold;
            margin-top: 10px;
        }


        .this {
            color: #fff !important;
            border: none !important;
            width: 30%;
            background-color: #27CCF5 !important;
        }

            .this:hover {
                background-color: #27F59F !important;
                color: #fff !important;
            }

        .this-add {
            background-color: #009925 !important;
            color: #fff !important;
            border: none !important;
            width: 100%;
        }

            .this-add:hover {
                background-color: #015415 !important;
                color: #fff !important;
            }

        .this-remove {
            background-color: #e53935 !important;
            color: #fff !important;
            border: none !important;
            width: 100%;
        }

            .this-remove:hover {
                background-color: #ad0006 !important;
                color: #fff !important;
            }

        .button-group {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }

        footer .container {
            padding: 0px;
        }

        .footer {
            position: relative !important;
        }

        .flex0 {
            flex-grow: 0;
        }

        .pagination {
            list-style: none;
            margin-top: 20px;
            display: flex;
            justify-content: space-between;
            text-align: center;
        }
    </style>
</head>
<body>
    <h1>Edit Cars in @Model.ActivityName</h1>
    <hr />
    <div class="cars-list">
        @foreach (var cars in Model.Cars)
        {
            <div class="cars-item">
                <div class="cars-image">
                    @if (!string.IsNullOrEmpty(cars.ImageUrl))
                    {
                        <img src="@cars.ImageUrl" alt="@cars.Name" />
                    }
                </div>
                <h4>@cars.Name</h4>
                <hr />
                @if (Model.SelectedCars.Contains(cars.Id))
                {
                    <form asp-action="RemoveCars" method="post">
                        <input type="hidden" name="ActivityId" value="@Model.ActivityId" />
                        <input type="hidden" name="CarsId" value="@cars.Id" />
                        <button type="submit" class="btn this-remove">Remove from Activity</button>
                    </form>
                }
                else
                {
                    <form asp-action="AddCars" method="post">
                        <input type="hidden" name="ActivityId" value="@Model.ActivityId" />
                        <input type="hidden" name="CarsId" value="@cars.Id" />
                        <button type="submit" class="btn this-add">Add to Activity</button>
                    </form>
                }

                <form asp-controller="Cars" asp-action="DeleteCars" method="post">
                    <input type="hidden" name="id" value="@cars.Id" />
                    <input type="hidden" name="activityId" value="@Model.ActivityId" />
                    <button type="submit" class="btn this-remove" style="margin-top: 10px" onclick="return confirm('Are you sure you want to delete @cars.Name?')">Delete Cars</button>
                </form>
            </div>
        }
    </div>

    <div class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <a href="@Url.Action("AddCars", new { activityId = Model.ActivityId, page = Model.CurrentPage - 1 })" class="btn this flex0">Previous</a>
        }
        else
        {
            <span class="flex0"></span>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a href="@Url.Action("AddCars", new { activityId = Model.ActivityId, page = Model.CurrentPage + 1 })" class="btn this flex0">Next</a>
        }
        else
        {
            <span class="flex0"></span>
        }
    </div>

    <div class="button-group">
        <a asp-controller="Cars" asp-action="CreateCars" asp-route-activityId="@Model.ActivityId" class="btn this">Create Cars</a>
        <a asp-controller="Activity" asp-action="ActivityDetails" asp-route-id="@Model.ActivityId" class="btn this">Back to Activity</a>
    </div>
</body>
</html>
